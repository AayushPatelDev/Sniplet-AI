{
  "version": 2,
  "builds": [
    {
      // front-end build: run `npm run build` inside the frontend folder
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd frontend && npm install && npm run build"
      }
    },
    {
      // back-end function: your Express streaming handler
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 1) Requests to /api/* get routed to your backend function
    { "src": "/api/(.*)", "dest": "backend/src/index.ts" },

    // 2) Anything else that matches an existing file in frontend/dist
    { "handle": "filesystem" },

    // 3) Fallback: all other routes serve your SPA's index.html
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
